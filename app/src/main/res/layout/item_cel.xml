<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TextView
        android:id="@+id/itemNom"
        android:textSize="20dp"
        android:text="Item nom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="30dp"/>

    <TextView
        android:id="@+id/itemPrix"
        android:textSize="20dp"
        android:layout_toRightOf="@id/itemNom"
        android:text="Item Prix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemDescription"
        android:layout_below="@id/itemNom"
        android:textSize="20dp"
        android:text="Description Description Description Description Description Description Description Description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/itemOwner"
        android:textSize="20dp"
        android:text="Bennis"
        android:textColor="@color/colorAccent"
        android:layout_below="@id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>