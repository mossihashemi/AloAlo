<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context="co.example.um2.aigle.alo.Common.Registration.RegistrationActivity">

    <EditText
        android:id="@+id/prenom"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_person"
        android:ems="10"
        android:hint="First name"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/nom"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_below="@+id/prenom"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_person"
        android:ems="10"
        android:hint="Last name"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/pseudo"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/nom"
        android:layout_alignRight="@+id/nom"
        android:layout_below="@+id/nom"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_user"
        android:ems="10"
        android:hint="*Username for login"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/mail"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/nom"
        android:layout_alignStart="@+id/nom"
        android:layout_below="@+id/pseudo"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_mail"
        android:hint="*e-mail"
        android:inputType="textPersonName"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/telephone"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/nom"
        android:layout_alignRight="@+id/nom"
        android:layout_below="@+id/mail"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_phone"
        android:ems="10"
        android:hint="Phone number"
        android:inputType="phone"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/motdepasse"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/telephone"
        android:layout_alignStart="@+id/telephone"
        android:layout_below="@+id/telephone"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="*Password"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp"
        android:inputType="textPassword" />

    <EditText
        android:id="@+id/motdepasseconfirmation"
        android:layout_width="250dp"
        android:layout_height="30dp"
        android:layout_alignEnd="@+id/motdepasse"
        android:layout_alignRight="@+id/motdepasse"
        android:layout_below="@+id/motdepasse"
        android:layout_marginTop="25dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_pass"
        android:ems="10"
        android:hint="*Confirm Password"
        android:textColor="#fff"
        android:textColorHint="#7affffff"
        android:textSize="16dp"
        android:inputType="textPassword" />

    <android.support.v7.widget.CardView
        android:onClick="subscribe"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/motdepasseconfirmation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="39dp"
        app:cardBackgroundColor="@color/colorAccent"
        android:elevation="10dp"
        app:cardCornerRadius="15dp"
        android:id="@+id/goRegister">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Register"
                android:textColor="#fff"
                android:textSize="16dp"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

        <TextView
            android:onClick="goLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/goRegister"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:text="Login"
            android:textColor="#fff"
            android:textSize="14dp"/>


</RelativeLayout>
